      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <version>8.1.8.v20121106</version>
        <configuration>
          <stopPort>9966</stopPort>
          <stopKey>stop</stopKey>
          <connectors>
            <!-- Listen to port 8983 -->
            <connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
              <port>8983</port>
              <maxIdleTime>60000</maxIdleTime>
            </connector>
          </connectors>
          <systemProperties>
            <force>true</force>
            <systemProperty>
              <name>solr.solr.home</name>
              <value>/home/francois/dev/daobs/web/target/solr-cores</value>
              <!--<value>${project.build.directory}/${solr.solr.home}</value>-->
            </systemProperty>
          </systemProperties>
          <!-- Read system properties from profile specific configuration file
          <systemPropertiesFile>${project.basedir}/profiles/${build.profile.id}/config.properties</systemPropertiesFile>
          -->
          <webApp>
            <contextPath>/solr</contextPath>
            <baseResource implementation="org.eclipse.jetty.util.resource.ResourceCollection">
              <resourcesAsCSV>
                ${project.basedir}/../dashboard/target/web
              </resourcesAsCSV>
            </baseResource>
          </webApp>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <slf4j.version>1.7.7</slf4j.version>
    <log4j.version>1.2.17</log4j.version>
    <solr.version>4.10.0</solr.version>
  </properties>
</project>